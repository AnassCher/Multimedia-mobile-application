<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:background="#1e1e24">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imageProf"
        android:layout_height="75dp"
        android:layout_width="75dp"
        android:scaleType="centerCrop"
        android:src="@drawable/prof"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_oval="true"
        tools:ignore="MissingConstraints"
        />
    <View
        android:layout_height="1dp"
        android:layout_width="1dp"
        android:id="@+id/viewSupporter"
        app:layout_constraintBottom_toBottomOf="@+id/imageProf"
        app:layout_constraintEnd_toEndOf="@+id/imageProf"
        app:layout_constraintStart_toStartOf="@+id/imageProf"
        app:layout_constraintTop_toTopOf="@+id/imageProf"
        tools:ignore="MissingConstraints" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Maya Domingez"
        android:textStyle="bold"
        android:textSize="18sp"
        android:id="@+id/Username"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/imageProf"
        app:layout_constraintBottom_toBottomOf="@+id/viewSupporter"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Verified"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/green"
        app:layout_constraintTop_toBottomOf="@+id/viewSupporter"
        app:layout_constraintStart_toEndOf="@+id/imageProf"

        />


</androidx.constraintlayout.widget.ConstraintLayout>